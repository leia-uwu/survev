{
  "private": true,
  "scripts": {
    "build": "tsc",
    "start:api": "NODE_ENV=production bun run --enable-source-maps dist/server/src/api/index.js",
    "start:game": "NODE_ENV=production node --enable-source-maps dist/server/src/gameServer.js --game-server",
    "dev": "concurrently --raw \"pnpm run dev:api\" \"pnpm run dev:game\"",
    "dev:api": "bun run --watch src/api/index.ts",
    "dev:game": "node -r ts-node/register --watch --watch-preserve-output --watch-path=../shared --watch-path=./src src/gameServer.ts --game-server",
    "db:generate": "drizzle-kit generate --config=src/api/drizzle.config.ts",
    "db:migrate": "bun run ./src/api/db/migrate.ts",
    "db:push": "drizzle-kit push --config=src/api/drizzle.config.ts",
    "db:seed": "bun run src/api/db/seed.ts",
    "db:studio": "drizzle-kit studio --config=src/api/drizzle.config.ts",
    "db:wipe": "rm -rf src/api/db/drizzle && rm game.db"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.2.2",
    "arctic": "^1.9.2",
    "drizzle-orm": "^0.33.0",
    "hono": "^4.6.7",
    "lucia": "^3.2.2",
    "nanotimer": "^0.3.15",
    "slugify": "^1.6.6",
    "uWebSockets.js": "github:uNetworking/uWebSockets.js#v20.49.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@libsql/client": "^0.10.0",
    "@lucia-auth/adapter-drizzle": "^1.1.0",
    "@types/bun": "^1.1.12",
    "@types/nanotimer": "^0.3.2",
    "@types/node": "^20.17.2",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.24.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
